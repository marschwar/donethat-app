<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EditView" parent="AppTheme">
        <item name="android:background">#FFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minWidth">400dp</item>
    </style>

    <style name="DynamicBlock" parent="AppTheme">
        <item name="android:background">#FFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="HeroBox" parent="AppTheme">
        <item name="android:maxWidth">@dimen/hero_max_width</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="HeroHeader" parent="AppTheme">
        <item name="android:textSize">50dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="HeroDescription" parent="AppTheme">
        <item name="android:textSize">40dip</item>
    </style>


</resources>